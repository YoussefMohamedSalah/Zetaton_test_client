    //     "src/contexts/*"
    //   ],
    //   "@enums/*": [
    //     "src/enums/*"
    //   ],
    //   "@framework/*": [
    //     "src/framework/*"
    //   ],
    //   "@hooks/*": [
    //     "src/hooks/*"
    //   ],
    //   "@theme/*": [
    //     "src/theme/*"
    //   ],
    //   "@types/*": [
    //     "src/types/*"
    //   ],
    //   "@utils/*": [
    //     "src/utils/*"
    //   ],
    //   "@validators/*": [
    //     "src/validators/*"
    //   ],
    // },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}